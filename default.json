{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":configMigration",
    "helpers:pinGitHubActionDigests",
    ":dependencyDashboard",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":automergePr",
    ":combinePatchMinorReleases",
    ":semanticCommitTypeAll(chore)",
    ":label(dependencies)",
    "group:monorepos",
    "group:githubArtifactActions",
    "github>muhlba91/renovate-config:automerge(digest)"
  ],
  "assignAutomerge": true,
  "automergeStrategy": "rebase",
  "platformAutomerge": true,
  "baseBranchPatterns": [
    "main"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "labels": [
        "dependencies",
        "renovate-patch"
      ]
    },
    {
      "matchUpdateTypes": [
        "digest"
      ],
      "labels": [
        "dependencies",
        "renovate-digest"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "labels": [
        "dependencies",
        "renovate-minor"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "renovate-major"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "matchManagers": [
        "github-actions"
      ],
      "labels": [
        "dependencies",
        "renovate-github-actions"
      ],
      "groupName": "all github-actions updates",
      "groupSlug": "renovate-github-actions"
    }
  ]
}