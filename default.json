{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":configMigration",
    "helpers:pinGitHubActionDigests",
    ":dependencyDashboard",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":automergePr",
    ":combinePatchMinorReleases",
    ":semanticCommitTypeAll(chore)",
    ":label(dependencies)",
    "github>muhlba91/renovate-config:automerge(digest)"
  ],
  "assignAutomerge": true,
  "automergeStrategy": "rebase",
  "platformAutomerge": true,
  "baseBranchPatterns": [
    "main"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "digest"
      ],
      "labels": [
        "dependencies",
        "renovate-patch"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "labels": [
        "dependencies",
        "renovate-minor"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "renovate-major"
      ]
    }
  ]
}